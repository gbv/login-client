{
  "name": "gbv-login-client",
  "version": "0.2.4",
  "description": "A client for gbv/login-server.",
  "main": "index.js",
  "scripts": {
    "test": "mocha --exit --timeout 10000 --slow 2000",
    "lint-staged": "lint-staged",
    "build": "browserify index.js -s LoginClient -o build/login-client.js && uglifyjs build/login-client.js > build/login-client.min.js",
    "build:add": "git add build/*"
  },
  "lint-staged": {
    "linters": {
      "**/*.js": [
        "eslint --fix",
        "git add"
      ],
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "build/*"
    ]
  },
  "pre-commit": [
    "lint-staged",
    "build",
    "build:add"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gbv/login-client.git"
  },
  "author": "Stefan Peters <stefan.peters@gbv.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gbv/login-client/issues"
  },
  "homepage": "https://github.com/gbv/login-client",
  "devDependencies": {
    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "eslint": "^5.13.0",
    "lint-staged": "^8.1.4",
    "mocha": "^5.2.0",
    "mocha-eslint": "^5.0.0",
    "pre-commit": "^1.2.2",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "isomorphic-ws": "^4.0.1",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.11",
    "node-fetch": "^2.3.0",
    "ws": "^6.1.3"
  }
}
