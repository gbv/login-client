    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "eslint": "^5.13.0",
    "lint-staged": "^8.1.4",
    "mocha": "^5.2.0",
    "mocha-eslint": "^5.0.0",
    "pre-commit": "^1.2.2",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "isomorphic-ws": "^4.0.1",
